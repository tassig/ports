package_name=make
package_version=4.1
tarball_suffix=bz2
build_dependencies=
iscustombuild=1

# make is definitely not going to call make, so it's a custom build
# TODO: build a statically linked version of make
custombuild(){
    rm -rf builddir || true
    mkdir builddir
    cd builddir
	wget -O archive $mirror_prefix/$rel_url
	tar xvf archive
    rm archive
	cd *
	./configure --prefix=/opt/$package_fullname
	./build.sh
	./make install
	ln -sv /opt/$package_fullname /opt/$package_name
	ln -sv /opt/$package_name/bin/* /bin/
	cd ../..
}
