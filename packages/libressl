package_name=libressl
package_version=2.3.2
tarball_suffix=gz
url=ftp://ftp5.eu.openbsd.org/pub/OpenBSD/LibreSSL/$package_name-$package_version.tar.$tarball_suffix
build_dependencies=
haspostinstall=1

postinstall(){
	ln -sv /opt/libressl/lib/* /lib/   # needed by python
	ln -sv /opt/libressl/lib/pkgconfig/* /opt/pkgconf/lib/pkgconfig/   # some packages rely on pkgconf
}