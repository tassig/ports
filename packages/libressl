package_name=libressl
package_version=2.3.2
tarball_suffix=gz
url=ftp://ftp5.eu.openbsd.org/pub/OpenBSD/LibreSSL/libressl-2.3.2.tar.gz
build_dependencies=
haspostinstall=1

postinstall(){
	# libressl is expected in the third party default directories by some software
	ln -s /opt/libressl/lib/* /usr/lib/
	ln -s /opt/libressl/include/* /usr/local/include/
}
