package_name=libressl
package_version=2.3.2
tarball_suffix=gz
url=ftp://ftp5.eu.openbsd.org/pub/OpenBSD/LibreSSL/$package_name-$package_version.tar.$tarball_suffix
build_dependencies=
haspostinstall=1

postinstall(){
	# libressl is expected in the third party default directories by some software
	ln -sv /opt/libressl/lib/* /usr/lib/
	ln -sv /opt/libressl/include/* /usr/local/include/
}
