package_name=libxml2
package_version=2.9.4
tarball_suffix=gz
url=http://mirrors.tassig.com/$package_name/$package_name-$package_version.tar.$tarball_suffix
iscustombuild=1

custombuild(){
        package_fullname=$package_name-$package_version
        package_tarball_name=$package_fullname.tar.$tarball_suffix
        wget $url
        tar xvf $package_tarball_name
        rm $package_tarball_name
        cd $package_fullname/

        ./configure --prefix=/opt/$package_fullname --without-python   # TODO: need fixing, in python
        make -j
        make install
        ln -sv /opt/$package_fullname /opt/$package_name
        ln -svf /opt/$package_name/lib/pkgconfig/* /opt/pkgconf/lib/pkgconfig/
        cd ..
}

