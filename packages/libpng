package_name=libpng
package_version=1.6.21
tarball_suffix=gz
url=http://download.sourceforge.net/libpng/libpng-1.6.21.tar.gz
build_dependencies=
iscustombuild=1

custombuild(){                                                                 
        package_fullname=$package_name-$package_version                     
        package_tarball_name=$package_fullname.tar.$tarball_suffix
        wget $url                                                              
        tar xvf $package_tarball_name                                          
        cd $package_fullname/                                                  
	./configure --prefix=/opt/$package_fullname --with-zlib-prefix=/opt/zlib
        make
        make install                                
        ln -sv /opt/$package_fullname /opt/$package_name
        ln -sv /opt/$package_name/bin/* /bin/           
        cd ..                                           
}