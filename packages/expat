package_name=expat
package_version=2.1.1
tarball_suffix=bz2
url=http://downloads.sourceforge.net/project/$package_name/$package_name/$package_version/$package_name-$package_version.tar.$tarball_suffix
build_dependencies=pkgconf
haspostinstall=1

postinstall(){
	ln -sv /opt/expat/lib/* /usr/lib/
	ln -sv /opt/expat/lib/pkgconfig/* /opt/pkgconf/lib/pkgconfig/
}