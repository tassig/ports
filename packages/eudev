package_name=eudev
package_version=3.1.5
tarball_suffix=gz
url=http://dev.gentoo.org/~blueness/eudev/eudev-3.1.5.tar.gz
build_dependencies=gperf
haspostinstall=1

postinstall(){
	ln -sv /opt/eudev/lib/pkgconfig/* /opt/pkgconf/lib/pkgconfig/
	ln -sv /opt/eudev/lib/* /usr/lib/
	ln -sv /opt/eudev/include/* /usr/local/include/
}
