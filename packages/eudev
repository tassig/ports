package_name=eudev
package_version=3.1.5
tarball_suffix=gz
url=http://dev.gentoo.org/~blueness/eudev/eudev-3.1.5.tar.gz
build_dependencies=gperf
haspostinstall=1

postinstall(){
	ln -s /opt/eudev-3.1.5/lib/pkgconfig/* /usr/lib/pkgconfig/
	ln -s /opt/eudev-3.1.5/lib/* /usr/lib/
	ln -s /opt/eudev-3.1.5/include/* /usr/local/include/
}
