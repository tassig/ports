package_name=bluetooth-tools
package_version=1.0.0
tarball_suffix=gz
build_dependencies=
iscustombuild=1

custombuild(){
	rm -rf builddir || true
	mkdir builddir
	cd builddir
	wget -O archive $mirror_prefix/$rel_url # mirror_prefix and rel_url are generated in installpackage
	tar xvf archive
	rm archive
	cd *
	make
	make install
	ln -sv $installdirectory/$package_fullname $installdirectory/$package_name
	ln -sv $installdirectory/$package_name/bin/* /bin/
	cd ../..
	rm -rf builddir
}
