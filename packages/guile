package_name=guile
package_version=2.0.14
tarball_suffix=xz
build_dependencies="libtool gmp libunistring gc"
iscustombuild=1
no_check=1

##########################
#
# guile
#
##########################


# custom build because libtool will not be located automatically and
# make -j will spawn ~500 processes
custombuild(){
	rm -rf builddir
	mkdir -p builddir   # do everything in builddir for tidiness
	cd builddir
	wget -O archive $url
	tar xvf archive
	rm archive
	cd *   # cd into the package directory
	
	CFLAGS="-I/opt/libtool/include \
		-I/opt/gmp/include \
		-I/opt/libunistring/include" \
	LDFLAGS="-L/opt/libtool/lib \
		-Wl,-rpath,/opt/libtool/lib \
		-L/opt/gmp/lib \
		-Wl,-rpath,/opt/gmp/lib \
		-L/opt/libunistring/lib \
		-Wl,-rpath,/opt/libunistring/lib \
		-Wl,-rpath,/opt/bdw-gc/lib" \
	./configure --prefix=$installdirectory/$package_name-$package_version 

	make -j 2
	if test -z $no_check   # run the make check, unless $no_check is set for 
						   # this package definition
	then make -j check || make -j test
	fi
	make install
	ln -sv $installdirectory/$package_fullname $installdirectory/$package_name
	ln -sv $installdirectory/$package_name/bin/* /bin/ || true   # don't crash 
											# if the links are already there
	if [ -d "$installdirectory/$package_name/lib/pkgconfig" ]; then
		ln -svf $installdirectory/$package_name/lib/pkgconfig/* \
		$installdirectory/pkgconf/lib/pkgconfig/   # install pkg-config files
	fi
	cd ../..
	rm -r builddir
}


