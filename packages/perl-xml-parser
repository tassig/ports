package_name=XML-Parser
package_version=1.0.4
build_dependencies="expat perl"
iscustombuild=1

# TODO: no package depends on it, remove?

custombuild(){
	export EXPATINCPATH="/opt/expat/include"
	export EXPATLIBPATH="/opt/expat/lib"
	wget http://mirrors.tassig.com/XML-Parser/XML-Parser-2.44.tar.gz
	tar xvf XML-Parser-2.44.tar.gz
	rm XML-Parser-2.44.tar.gz
	cd XML-Parser-2.44
	perl Makefile.PL EXPATINCPATH=$EXPATINCPATH EXPATLIBPATH=$EXPATLIBPATH
	make
	# TODO: make check
	make install
	cd ..
	rm -r XML-Parser-2.44
	#cpan XML::Parser
}
