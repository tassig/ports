package_name=linux-kernel-headers
package_version=4.4.6
tarball_suffix=xz
url=https://cdn.kernel.org/pub/linux/kernel/v4.x/linux-4.4.6.tar.xz
build_dependencies=
iscustombuild=1

custombuild(){
	# cf http://www.linuxfromscratch.org/lfs/view/development/chapter05/linux-headers.html
	
	wget http://cdn.kernel.org/pub/linux/kernel/v4.x/linux-4.4.6.tar.xz
	tar xvf linux-4.4.6.tar.xz
	cd linux-4.4.6
	make INSTALL_HDR_PATH=/usr/ headers_install
	cd ..
}