package_name=linux-kernel-headers
package_version=4.6.7   # TODO: this field is provided for informational purposes only, it should be ignored by the script
build_dependencies=
iscustombuild=1

custombuild(){
	# TODO: it should download and install the headers of our current kernel version
	url=https://cdn.kernel.org/pub/linux/kernel/v4.x/linux-$package_version.tar.xz
	rm -rf builddir
	mkdir -p builddir   # do everything in builddir for tidiness
	cd builddir
	wget -O archive $url
	tar xvf archive
	rm archive
	cd *   # cd into the package directory
	make INSTALL_HDR_PATH=$installdirectory/$package_name-$package_version/ headers_install
	ln -sv $installdirectory/$package_fullname $installdirectory/$package_name
	cd ../..
	rm -r builddir
}
