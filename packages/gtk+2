package_name=gtk+
package_version=2.24.28 
build_dependencies="atk gdk-pixbuf pango hicolor-icon-theme"   # TODO: add gobject-introspection
url=http://ftp.gnome.org/pub/gnome/sources/gtk+/2.24/gtk+-2.24.28.tar.xz   # TODO: move to tassig
iscustombuild=1
no_check=1

########################
#
# GTK+2
#
# GTK is an important graphical toolkit
# 
##########################

# TODO: tests fail, fix


# custombuild because bug in configure (incorrect linking of glib)
custombuild(){
	mkdir -p builddir   # do everything in builddir for tidiness
	cd builddir
	wget -O archive $url
	tar xvf archive 
	rm archive
	cd *   # cd into the package directory, there is usually only one, this is a custom build otherwise
	package_fullname=$package_name-$package_version
	LDFLAGS="-Wl,-rpath=/opt/glib/lib" ./configure --prefix=/opt/$package_fullname/   # bug in configure
	make -j4   # too much memory otherwise
	if test -z $no_check   # run the make check, unless $no_check is set for this package definition
	then make -j check || make -j test
	fi
	make install
	ln -sv /opt/$package_fullname /opt/$package_name
	ln -sv /opt/$package_name/bin/* /bin/ || true   # don't crash if the links are already there
	if [ -d "/opt/$package_name/lib/pkgconfig" ]; then
		ln -svf /opt/$package_name/lib/pkgconfig/* /opt/pkgconf/lib/pkgconfig/   # install pkg-config files
	fi
	cd ../..
	rm -r builddir
}


