package_name=valgrind
package_version=3.11.0
tarball_suffix=bz2
build_dependencies=
iscustombuild=1
no_check=1 # TODO: str_tester-str_tester.o: In function `test_rawmemchr':
		   # /root/ports/builddir/valgrind-3.11.0/memcheck/tests/str_tester.c:513: undefined reference to `rawmemchr'
		   # why?

custombuild(){
	rm -rf builddir
	mkdir -p builddir   # do everything in builddir for tidiness
	cd builddir
	wget -O archive $url
	tar xvf archive
	rm archive
	cd *   # cd into the package directory

	# Specify GLIBC_VERSION in configure
	sed -i -e 's/case "${GLIBC_VERSION}" in/GLIBC_VERSION=2.2\n\ncase "${GLIBC_VERSION}" in/g' configure
	./configure --prefix=$installdirectory/$package_fullname --with-pagesize=4

	make -j
	if test -z $no_check   # run the make check, unless $no_check is set for 
						   # this package definition
	then make -j check || make -j test
	fi
	make install
	ln -sv $installdirectory/$package_fullname $installdirectory/$package_name
	ln -sv $installdirectory/$package_name/bin/* /bin/ || true   # don't crash 
											# if the links are already there
	if [ -d "$installdirectory/$package_name/lib/pkgconfig" ]; then
		ln -svf $installdirectory/$package_name/lib/pkgconfig/* \
		$installdirectory/pkgconf/lib/pkgconfig/   # install pkg-config files
	fi
	cd ../..
	rm -r builddir
}
