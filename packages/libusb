package_name=libusb
package_version=1.0.20
tarball_suffix=bz2
url=http://mirrors.tassig.com/libusb/libusb-1.0.20.tar.bz2
build_dependencies=eudev
haspostinstall=1

postinstall(){
	ln -s /opt/$package_name/lib/pkgconfig/* /usr/lib/pkgconfig/
        ln -s /opt/$package_name/lib/* /usr/lib/
        ln -s /opt/$package_name/include/* /usr/local/include/
}
