package_name=tcl
package_version=8.6.5
tarball_suffix=gz
#url=http://mirrors.tassig.com/tcl/tcl-core8.6.5-src.tar.gz
url=http://prdownloads.sourceforge.net/tcl/tcl8.6.5-src.tar.gz
iscustombuild=1


custombuild(){
	wget $url
	tar xvf tcl8.6.5-src.tar.gz
	cd tcl8.6.5/unix/
	./configure --prefix=/opt/tcl-8.6.5
	make -j
	make install
	cd ..
	
	ln -sv /opt/tcl-8.6.5 /opt/tcl
	ln -sv /opt/tcl/bin/* /bin/
}



