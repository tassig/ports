package_name=zlib
package_version=1.2.8
tarball_suffix=xz
url=http://zlib.net/$package_name-$package_version.tar.$tarball_suffix
build_dependencies=
haspostinstall=1

postinstall(){
	# zlib is expected in the third party default directories by some software
	ln -s /opt/zlib/lib/* /usr/lib/
	ln -s /opt/zlib/include/* /usr/local/include/
}
