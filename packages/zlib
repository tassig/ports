package_name=zlib
package_version=1.2.8
tarball_suffix=xz
url=http://zlib.net/$package_name-$package_version.tar.$tarball_suffix
build_dependencies=
haspostinstall=1

postinstall(){
	ln -sv /opt/zlib/lib/libz.* /lib/   # needed by python
	ln -sv /opt/zlib/lib/pkgconfig/zlib.pc /opt/pkgconf/lib/pkgconfig/   # some packages rely on pkgconf
}