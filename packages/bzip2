package_name=bzip2
package_version=1.0.6
tarball_suffix=gz
url=http://mirrors.tassig.com/bzip2/bzip2-1.0.6.tar.gz
build_dependencies=
iscustombuild=1
haspostinstall=1

custombuild(){                                                             
        package_fullname=$package_name-$package_version                         
        package_tarball_name=$package_fullname.tar.$tarball_suffix          
        rm $package_tarball_name                                  
        # TODO: This is hardcoded url, all packages shall define just base URL,
        wget $url                                                              
        tar xvf $package_tarball_name                                          
        cd $package_fullname/                                                  
        make -j -f Makefile-libbz2_so
        make -j
        make install PREFIX=/opt/$package_fullname
	cp -v *.so* /opt/$package_fullname/lib/
        ln -sv /opt/$package_fullname /opt/$package_name       
        ln -sv /opt/$package_name/bin/* /bin/                                   
        cd ..                                               
}

postinstall(){
	ln -sv /opt/bzip2/lib/pkgconfig/* /opt/pkgconf/lib/pkgconfig/
}
