package_name=glibc
package_version=2.23
tarball_suffix=xz
url=http://ftp.gnu.org/gnu/glibc/glibc-2.23.tar.xz
build_dependencies=
iscustombuild=1


custombuild(){
	wget url
	tar xvf glibc-2.23.tar.xz
	cd glibc-2.23/
	mkdir build
	cd build
	../configure --prefix=/opt/glibc-2.23 --enable-kernel=2.6.32
	make
	make install
	
	ln -sfv /opt/glibc-2.23 /opt/glibc
	ln -sv /opt/glibc/bin/* /bin/
	ln -sv /opt/glibc/lib/* /lib/
}