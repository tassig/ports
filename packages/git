# WARNING: do not forget to update http://longhorn.tassig.com/downloads/ports.tar.xz after git port update
package_name=git
package_version=2.10.2
tarball_suffix=xz
build_dependencies="zlib libressl curl perl gettext expat"
iscustombuild=1
no_check=1 # TODO: 6 tests failed, why?

# git not using pkg-config
# TODO: we should patch configure.ac, use pkg-config, and push the patch upstream, they should accept it
custombuild(){
	rm -rf builddir
	mkdir -p builddir   # do everything in builddir for tidiness
	cd builddir
	wget -O archive $url
	tar xvf archive
	rm archive
	cd *   # cd into the package directory

	./configure --prefix=$installdirectory/$package_fullname --with-zlib=$installdirectory/zlib --with-curl=$installdirectory/curl --with-perl=/bin/perl

	make -j
	if test -z $no_check   # run the make check, unless $no_check is set for 
						   # this package definition
	then make -j check || make -j test
	fi
	make install
	ln -sv $installdirectory/$package_fullname $installdirectory/$package_name
	ln -sv $installdirectory/$package_name/bin/* /bin/ || true   # don't crash 
											# if the links are already there
	if [ -d "$installdirectory/$package_name/lib/pkgconfig" ]; then
		ln -svf $installdirectory/$package_name/lib/pkgconfig/* \
		$installdirectory/pkgconf/lib/pkgconfig/   # install pkg-config files
	fi
	cd ../..
	rm -r builddir

}

postinstall(){

        # strip
        strip $installdirectory/$package_fullname/libexec/git-core/* || true
}
