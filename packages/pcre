package_name=pcre
package_version=8.38
tarball_suffix=gz
url=ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/$package_name-$package_version.tar.$tarball_suffix
haspostinstall=1
configure_string="--enable-utf --enable-unicode-properties"

postinstall(){
	ln -sv /opt/$package_name/lib/pkgconfig/* /opt/pkgconf/lib/pkgconfig/   # some packages rely on pkgconf
	ln -sv /opt/$package_name/lib/lib* /lib/
}