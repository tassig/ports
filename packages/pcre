package_name=pcre
package_version=8.38
tarball_suffix=gz
url=ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/$package_name-$package_version.tar.$tarball_suffix
iscustombuild=1

custombuild(){
	package_fullname=$package_name-$package_version
	wget -O archive $url
	tar xvf archive
	rm archive
	cd $package_name*

	./configure --prefix=/opt/$package_fullname/ --enable-utf --enable-unicode-properties # needed for successful building of glib
	make -j
	make install
	ln -sv /opt/$package_fullname /opt/$package_name
	ln -sv /opt/$package_name/bin/* /bin/ || true
	ln -sv /opt/$package_name/lib/pkgconfig/* /opt/pkgconf/lib/pkgconfig/ || true
	cd ..
}